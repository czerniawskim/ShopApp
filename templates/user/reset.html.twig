{% extends "user/login.html.twig" %}


{% block title %}Reset password
{% endblock %}

{% block body %}
    <div class="resetContainer">
        <h3 class="resetH">Password reset</h3>
        {{form_start(ask)}}
        {{form_widget(ask.data)}}
        {{form_widget(ask.Submit)}}
        {{form_end(ask)}}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{label}}">
                    {{message}}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}
