{% extends 'base.html.twig' %}

{% block title %}Online shop
{% endblock %}

{% block stylesheets %}
    {{parent()}}
    <link href="{{asset('styles/app.css')}}" rel="stylesheet">
{% endblock %}

{% block navbar %}
    <div class="navContainer">
        <div class="appLabel">
            <a href="{{path('homepage')}}">Shop</a>
        </div>

        <div class="search">
            {{form_start(search)}}
            {{form_widget(search.Query)}}
            {{form_widget(search.Search)}}
            {{form_end(search)}}
        </div>

        <div class="contact">
            <p>
                <i class="fas fa-headphones-alt"></i>
            </p>
            <div class="dropdown-contact">
                <p>
                    <i class="fas fa-phone"></i>
                    <a href="tel:111-222-333" target="_blank" title="111-222-333">111-222-333</a>
                </p>
                <p>
                    <i class="fas fa-at"></i>
                    <a href="mailto:contact@shop.com" target="_blank" title="contact@shop.com">Send mail</a>
                </p>
                <p>
                    <i class="fas fa-map-marker-alt"></i>
                    <a href="{{path('branches')}}" title="Branches">Branches</a>
                </p>
            </div>
        </div>

        {% if app.session.get('user') is null %}
            <div class="login">
                <a href="{{path('login')}}">
                    <button>
                        <i class="far fa-user"></i>
                        Login</button>
                </a>
            </div>
        {% else %}
            <div class="logout">
                <a href="{{path('logout')}}">
                    <button title="{{app.session.get('user').Username}}">
                        <i class="fas fa-sign-out-alt"></i>
                        Logout</button>
                </a>
            </div>
        {% endif %}

        <div class="cart">
            <a href="{{path('cart')}}">
                <i class="fas fa-shopping-cart"></i>
            </a>
        </div>
    </div>
{% endblock %}

{% block body %}
    <main class="recommendations">
        {% if recoms is not null %}
            <h1>Our recommendation</h1>
            <section class="recom-prods">
                {% for recom in recoms %}
                    <a href="{{path('product', {'id': recom.id})}}">
                        <section class="item">
                            <div class="image">
                                <img alt="Embedded Image" src="{{asset('prodsImgs/' ~ recom.image)}}"/>
                            </div>
                            <p class="name">{{recom.Name}}</p>
                            <p class="price">
                                <i class="fas fa-dollar-sign"></i>
                                {{recom.Price}}</p>
                        </section>
                    </a>
                {% endfor %}
            </section>
        {% else %}
            <div class="error">
                <h1>Seems like something happend with products</h1>
                <p>Don't worry we are trying to fix it</p>
            </div>
        {% endif %}
    </main>
{% endblock %}
