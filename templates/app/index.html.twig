{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
	{{parent()}}
	<link href="/styles/app/index.css" rel="stylesheet">
{% endblock %}

{% block body %}
	<nav class="app-nav-bar">
		<span class="app-label">E-Shop</span>
		<div class="right-nav">
			<a href="{{path('home')}}">Home</a>
			<a href="">Categories</a>
			<form action="" method="GET" class="search-form">
				<input type="text" name="query" class="search-inp" placeholder="Cosmetics, clothes..." {% if app.request.query.get('query') %} value="{{app.request.query.get('query')}}" {% endif %} required>
				<button type="submit" class="search-sub">
					<svg stroke="currentColor" class="search-icon" stroke-width="0" viewbox="0 0 24 24" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
						<path d="M10,18c1.846,0,3.543-0.635,4.897-1.688l4.396,4.396l1.414-1.414l-4.396-4.396C17.365,13.543,18,11.846,18,10 c0-4.411-3.589-8-8-8s-8,3.589-8,8S5.589,18,10,18z M10,4c3.309,0,6,2.691,6,6s-2.691,6-6,6s-6-2.691-6-6S6.691,4,10,4z"></path>
					</svg>
				</button>
			</form>
			<svg stroke="currentColor" class="bag-icon" stroke-width="0" viewbox="0 0 16 16" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
				<path d="M1 4h14v10a2 2 0 01-2 2H3a2 2 0 01-2-2V4zm7-2.5A2.5 2.5 0 005.5 4h-1a3.5 3.5 0 117 0h-1A2.5 2.5 0 008 1.5z"></path>
			</svg>
			{% if app.user %}
				<span class="nav-user">
					{{app.user.username}}
					<svg stroke="currentColor" class="down-icon" stroke-width="0" viewbox="0 0 1024 1024" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
						<path d="M840.4 300H183.6c-19.7 0-30.7 20.8-18.5 35l328.4 380.8c9.4 10.9 27.5 10.9 37 0L858.9 335c12.2-14.2 1.2-35-18.5-35z"></path>
					</svg>
				</span>
				<div class="user-expand-menu">
					<a href="{{path('logout')}}">
						<svg stroke="currentColor" class="logout-icon" stroke-width="0" viewbox="0 0 24 24" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
							<g>
								<path fill="none" d="M0 0h24v24H0z"></path>
								<path d="M12 22C6.477 22 2 17.523 2 12S6.477 2 12 2a9.985 9.985 0 0 1 8 4h-2.71a8 8 0 1 0 .001 12h2.71A9.985 9.985 0 0 1 12 22zm7-6v-3h-8v-2h8V8l5 4-5 4z"></path>
							</g>
						</svg>
						Logout
					</a>
				</div>
			{% else %}
				<a href="{{path('login')}}" class="login-link">Login</a>
			{% endif %}
		</div>
	</nav>

	{% block content %}{% endblock %}
{% endblock %}
