{% extends "admin/dash.html.twig" %}

{% block title %}
    {{parent()}}
    | Products
{% endblock %}

{% block body %}
    <main class="products">
        <p class="link-back">
            <a href="{{path('dash')}}">
                <i class="fas fa-arrow-left"></i>
                Back</a>
        </p>
        <p class="create">
            <a href="{{path('newProd')}}">
                <button>
                    <i class="fas fa-plus"></i>
                    Create new product</button>
            </a>
        </p>
        {% for product in products %}
            <section class="item">
                <p class="image">
                    <img alt="Embedded Image" src="{{asset('prodsImgs/' ~ product.image)}}"/>
                </p>
                <p class="name">{{product.Name}}</p>
                <p class="price">
                    <i class="fas fa-dollar-sign"></i>
                    {{product.Price}}
                </p>
                <span class="description" title="{{product.Description}}">
                    {% if product.Description is null %}
                        Description not provided
                    {% else %}
                        {{product.Description|markdown}}
                    {% endif %}
                </span>
                <p>
                    <a href="{{path('editProd',{'id':product.id})}}">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="{{path('remProd',{'id':product.id})}}">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </p>
            </section>
        {% endfor %}
    </main>
{% endblock %}
