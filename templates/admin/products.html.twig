{% extends "admin/dash.html.twig" %}

{% block title %}
    {{parent()}}
    | Products
{% endblock %}

{% block body %}
    <main class="products">
        <p class="link-back">
            <a href="{{path('dash')}}">
                <i class="fas fa-arrow-left"></i>
                Back</a>
        </p>
        <p>
            <a href="{{path('newProd')}}">
                <button>
                    <i class="fas fa-plus"></i>
                    Create new product</button>
            </a>
        </p>
        {% for product in products %}
            <section class="item">
                <p class="image">
                    <img alt="Embedded Image" src="{{asset('prodsImgs/' ~ product.image)}}"/>
                </p>
                <p class="name">{{product.Name}}</p>
                <p class="price">
                    <i class="fas fa-dollar-sign"></i>
                    {{product.Price}}
                </p>
                <p class="description">
                    <i class="fas fa-question-circle" {% if product.Description is not null %} title="{{product.Description}}" {% else %} title="Description not provided" {% endif %}></i>
                </p>
            </section>
        {% endfor %}
    </main>
{% endblock %}
